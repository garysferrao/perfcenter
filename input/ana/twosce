cpu schedP fcfs
end

virtres logfilewrite 
cpu servt 0.005
end 

//tasks definition block
task send_to_auth
cpu servt 0.030
//logfilewrite
end

task send_to_imap 
cpu servt 0.020
end
 

task change_to_html
cpu servt 0.010
logfilewrite
end 

task verify_passwd 
cpu servt 0.010
//logfilewrite
end 

task list_message
cpu servt 0.025
//logfilewrite
end 

task read_message 
cpu servt 0.020
//logfilewrite
end 

task delete_message 
cpu servt 0.015
//logfilewrite



end

//servers definition
server web
thread count 400
thread buffer 99999
thread schedP fcfs
task send_to_auth
task send_to_imap
task change_to_html
end


server auth
thread count 400
thread buffer 99999
thread schedP fcfs
task verify_passwd
end

server imap
thread count 400
thread buffer 99999
thread schedP fcfs
task list_message
task read_message
task delete_message
end

//server deployed onto hosts
deploy web machine1[1]
deploy auth machine1[1]
deploy imap machine2[1]


//host deployed onto lans
deploy machine1[1] lan1
deploy machine2[1] lan1
 

//scenario definitions
scenario Login prob 0.75
    send_to_auth  verify_passwd 128 SYNC
    branch prob 0.1
        verify_passwd  change_to_html 128 
    end 
    branch prob 0.9
         verify_passwd  send_to_imap 256  
         send_to_imap list_message 512 SYNC 
         list_message  change_to_html 2048
    end  
end

scenario dosomet prob 0.25
    send_to_auth  verify_passwd 128 SYNC
    branch prob 0.1
        verify_passwd  change_to_html 128 
    end 
    branch prob 0.9
         verify_passwd  send_to_imap 256  
         send_to_imap list_message 512 SYNC 
         list_message  change_to_html 2048
    end  
end


